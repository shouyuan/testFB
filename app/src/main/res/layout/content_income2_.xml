<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_income2"
    tools:context="com.example.sharon.myapplication.income2_Activity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter your income, we calculate tax for you"
        android:id="@+id/textView2"
        android:textStyle="bold"
        android:textSize="35px"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="200sp"
        android:ems="10"
        android:layout_height="wrap_content"
        android:id="@+id/editText8"
        android:layout_below="@+id/textView2"
        android:hint="federal withheld(W2)"
        android:layout_centerHorizontal="true"
        />
    <EditText
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:id="@+id/editText9"
        android:hint="federal withheld(1042S)"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/editText8"
        android:layout_alignStart="@+id/editText8" />
    <EditText
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:id="@+id/editText10"
        android:hint="tax return of 2013"
        android:layout_below="@+id/editText9"
        android:layout_alignStart="@+id/editText9"
        android:layout_marginTop="33dp" />
    <EditText
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:id="@+id/editText11"
        android:hint="credit(1040C)"
        android:layout_below="@+id/editText10"
        android:layout_alignStart="@+id/editText10"
        android:layout_marginTop="33dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate"
        android:id="@+id/button2"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="39dp" />
</RelativeLayout>
