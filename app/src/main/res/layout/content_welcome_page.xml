<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_welcome_page"
    tools:context="com.example.sharon.myapplication.WelcomePageActivity">

    <CheckBox
        android:layout_width="150dp"
        android:layout_height="180dp"
        android:text="Gender"
        android:id="@+id/checkBox"
        android:checked="false"
        style="@style/GenderCheckBox"
        android:layout_marginLeft="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:layout_width="150dp"
        android:layout_height="180dp"
        android:text="Student"
        android:id="@+id/checkBox2"
        android:checked="false"
        style="@style/StudentCheckBox"
        android:layout_marginEnd="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <CheckBox
        android:layout_width="150dp"
        android:layout_height="180dp"
        android:text="Employment"
        android:id="@+id/checkBox3"
        android:layout_below="@+id/checkBox"
        android:layout_alignStart="@+id/checkBox"
        android:layout_marginTop="20dp"
        android:checked="false"
        style="@style/EmploymentCheckBox" />

    <CheckBox
        android:layout_width="150dp"
        android:layout_height="180dp"
        android:text="Income"
        android:id="@+id/checkBox4"
        android:layout_alignTop="@+id/checkBox3"
        android:layout_alignStart="@+id/checkBox2"
        android:checked="false"
        style="@style/IncomeCheckBox"/>


</RelativeLayout>
